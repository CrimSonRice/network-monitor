# Network Monitor — environment template
# Copy to .env and set values. Never commit .env.

# Application
APP_NAME=network-monitor
ENVIRONMENT=development
DEBUG=false

# Server (Docker/Nginx: HOST=0.0.0.0)
HOST=0.0.0.0
PORT=8000
WORKERS=1

# Security — override in production
SECRET_KEY=change-me-in-production-min-32-chars
JWT_ALGORITHM=HS256
JWT_ACCESS_EXPIRE_MINUTES=30
CORS_ORIGINS=*

# Rate limiting (DDoS / anti-spam)
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW_SECONDS=60

# Proxy (Nginx / Cloudflare)
TRUST_PROXY=true
PROXY_HEADER_COUNT=1

# Logging (JSON for cloud aggregators)
LOG_LEVEL=INFO
LOG_JSON=false

# Cache
CACHE_TTL_SECONDS=60
CACHE_ENABLED=true
